colorscheme espresso_libre

set nowrap

set guifont=Monospace\ 12

" Add horizontal scrollbar
set guioptions+=b
" Hide menubar
set guioptions-=m
" Hide toolbar
set guioptions-=T
" Hide simple dialogs
set guioptions+=c
" Proper mouse aesthetics
set mouseshape=ve:beam,sd:updown

" Hackish way to disable a broken balloon popup from plugin:ruby.vim
set balloondelay=100000

